[user]
	name  = Lonnon Foster
	email = lonnon.foster@gmail.com
[github]
	user  = lonnon
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[core]
	pager = less -+S
	excludesfile = ~/.gitignore
	editor = vim
[alias]
	st = status
	co = checkout
	br = branch
	sb = show-branch
	l1 = log --pretty=oneline
	ls = log --stat
	lg = log --graph
  d  = diff
  dt = difftool
[push]
	default = simple
[diff]
  tool = vimdiff
[merge]
	tool = bc3
[mergetool]
	bc3 = trustExitCode
