alias       h='history | tail -20'
alias      ls='ls -hFCG'
alias      la='ls -A'
alias      ll='ls -l'
alias     lla='ls -Al'
alias      l.='ls -d .*'
alias    grep='grep -n'
alias      to='~/.scripts/todo.sh'

alias   purge='rm *~ .*~ *.*~ \#*'
alias   rmtmp='rm **/*~'
alias   start='cmd /C start'

alias   rot13='tr a-zA-Z n-za-mN-ZA-M'

# Hack to edit crontab in-place in vim
alias crontab='VIM_CRONTAB=true crontab'

alias tmux="tmux -2"
